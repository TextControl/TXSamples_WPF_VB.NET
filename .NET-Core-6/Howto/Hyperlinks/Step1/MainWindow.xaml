<Window x:Class="MainWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:WPF="clr-namespace:TXTextControl.WPF;assembly=TXTextControl.WPF" 
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Howto: Use Hypertext Links - Step 1: Inserting a Hypertext Link" Height="450" Width="800">
    <Grid Margin="11">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <WPF:TextControl Name="m_txTextControl" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0"/>
        <Button Name="m_btnInsertHyperlink" Grid.Column="0" Grid.Row="1" Content="Insert _Hypertext Link" MinWidth="75" MinHeight="23" Margin="0,15,0,0" Click="InsertHyperlink_Click"/>
        <Button Name="m_btnSaveAs" Grid.Column="1" Grid.Row="1" Content="Save as HTML File" MinWidth="75" MinHeight="23" Margin="11,15,0,0" Click="SaveAs_Click"/>
    </Grid>
</Window>

